<!--
  File: views/pages/location_detail.ejs
  
  Mô tả: Trang chi tiết địa điểm
  - Hiển thị thông tin đầy đủ của location: name, description, address, rating, owner
  - Hiển thị danh sách reviews với media (ảnh/video)
  - Form viết review mới (chỉ user, modal)
  - Hiển thị danh sách vouchers khả dụng cho location
  - Rating stars interaction (click và hover)
  - Alert hiển thị số lần review còn lại khi page load
  
  Công nghệ sử dụng:
  - EJS: Template engine để render HTML
  - Bootstrap 5: Framework CSS cho UI và modals
  - Font Awesome: Icons
  - JavaScript: Rating stars interaction, fetch API để lấy review remaining count
  - CSS: Styling cho review media grid, star rating, location hero card
-->

<div class="row">
    <div class="col-lg-8">
        <div class="card mb-4 position-relative location-hero-card">
            <img src="<%= location.imageUrl %>" class="card-img-top" alt="<%= location.name %>" style="height: 300px; object-fit: cover;">
            <% if (location.owner) { %>
                <button type="button" class="btn btn-light btn-sm owner-chip shadow-sm" data-bs-toggle="modal" data-bs-target="#ownerProfileModal">
                    <div class="text-muted small mb-1">Chủ sở hữu</div>
                    <div class="fw-semibold text-uppercase"><%= location.owner.username %></div>
                </button>
            <% } %>
            <div class="card-body">
                <div class="d-flex justify-content-between align-items-start mb-3">
                    <div>
                        <h1 class="card-title h2"><%= location.name %></h1>
                        <div class="d-flex align-items-center mb-2">
                            <div class="rating me-3">
                                <% for (let i = 1; i <= 5; i++) { %>
                                    <i class="fas fa-star <%= i <= averageRating ? 'text-warning' : 'text-muted' %>"></i>
                                <% } %>
                                <span class="ms-2"><%= averageRating %> (<%= reviewCount %> đánh giá)</span>
                            </div>
                            <span class="badge bg-secondary"><%= location.type %></span>
                        </div>
                    </div>
                </div>
                <p class="card-text"><%= location.description %></p>
                <h6><i class="fas fa-map-marker-alt me-2"></i>Địa chỉ:</h6>
                <p class="text-muted mb-2"><%= location.address %></p>
                
                <!-- Google Maps Button -->
                <div class="d-flex gap-2 mb-3">
                    <a href="https://www.google.com/maps/search/?api=1&query=<%= encodeURIComponent(location.address + ', ' + (location.city || 'Việt Nam')) %>" 
                       target="_blank" 
                       class="btn btn-primary btn-sm">
                        <i class="fas fa-map-marked-alt me-1"></i>
                        Xem trên Google Maps
                    </a>
                    <a href="https://www.google.com/maps/dir/?api=1&destination=<%= encodeURIComponent(location.address + ', ' + (location.city || 'Việt Nam')) %>" 
                       target="_blank" 
                       class="btn btn-outline-primary btn-sm">
                        <i class="fas fa-directions me-1"></i>
                        Chỉ đường
                    </a>
                </div>

                <!-- Embedded Google Map -->
                <div id="map" style="width: 100%; height: 300px; border-radius: 10px; margin-bottom: 15px;"></div>
                <div id="distance-info"></div>
            </div>
        </div>

        <div class="card">
            <div class="card-header d-flex justify-content-between align-items-center">
                <h5 class="mb-0">
                    <i class="fas fa-comments me-2"></i>
                    Đánh giá (<%= reviewCount %>)
                </h5>
                <% if (user && user.role === "user") { %>
                    <button class="btn btn-primary btn-sm" data-bs-toggle="modal" data-bs-target="#reviewModal">
                        <i class="fas fa-plus me-1"></i>Viết đánh giá
                    </button>
                <% } %>
            </div>
            <div class="card-body">
                <% if (reviews && reviews.length > 0) { %>
                    <% reviews.forEach(review => { %>
                        <div id="review-<%= review._id %>" class="review-item border-bottom pb-3 mb-3">
                            <div class="d-flex justify-content-between align-items-start">
                                <div>
                                    <h6 class="mb-1">
                                        <i class="fas fa-user-circle me-1"></i>
                                        <%= review.user.username %>
                                    </h6>
                                    <div class="rating mb-2">
                                        <% for (let i = 1; i <= 5; i++) { %>
                                            <i class="fas fa-star <%= i <= review.rating ? 'text-warning' : 'text-muted' %>"></i>
                                        <% } %>
                                    </div>
                                </div>
                                <small class="text-muted">
                                    <i class="fas fa-clock me-1"></i>
                                    <%= new Date(review.createdAt).toLocaleString('vi-VN', { dateStyle: 'short', timeStyle: 'medium' }) %>
                                </small>
                            </div>
                            <% if (review.comment) { %>
                                <p class="mb-2"><%= review.comment %></p>
                            <% } %>
                            <% if (review.media && review.media.length > 0) { %>
                                <div class="review-media-grid">
                                    <% review.media.forEach(function(item) { %>
                                        <% if (item.type === 'image') { %>
                                            <a href="<%= item.url %>" target="_blank" rel="noopener" class="review-media-thumb" title="Xem ảnh">
                                                <img src="<%= item.url %>" alt="Ảnh đánh giá" loading="lazy">
                                            </a>
                                        <% } else { %>
                                            <video src="<%= item.url %>" controls preload="metadata"></video>
                                        <% } %>
                                    <% }) %>
                                </div>
                            <% } %>
                        </div>
                    <% }) %>
                <% } else { %>
                    <div class="text-center py-4">
                        <i class="fas fa-comment-slash fa-2x text-muted mb-3"></i>
                        <p class="text-muted">Chưa có đánh giá nào. Hãy là người đầu tiên đánh giá!</p>
                    </div>
                <% } %>
            </div>
        </div>
    </div>

    <div class="col-lg-4">
        <div class="card mb-4">
            <div class="card-header">
                <h5 class="mb-0">
                    <i class="fas fa-percent me-2"></i>
                    Voucher khả dụng
                </h5>
            </div>
            <div class="card-body">
                <% if (vouchers && vouchers.length > 0) { %>
                    <% vouchers.forEach(voucher => { %>
                        <div class="voucher-item border rounded p-3 mb-3">
                            <div class="d-flex justify-content-between align-items-start mb-2">
                                <div>
                                    <h6 class="text-success mb-1">
                                        <i class="fas fa-ticket-alt me-1"></i>
                                        <%= voucher.code %>
                                    </h6>
                                    <span class="badge bg-success">Giảm <%= voucher.discountPct %>%</span>
                                </div>
                            </div>
                            <% if (voucher.conditions) { %>
                                <p class="small text-muted mb-2">
                                    <i class="fas fa-info-circle me-1"></i>
                                    <%= voucher.conditions %>
                                </p>
                            <% } %>
                            <div class="mb-2">
                                <small class="text-muted">
                                    Còn lại <span data-remaining-for="<%= voucher._id %>"><%= voucher.quantityRemaining %></span> voucher
                                </small>
                                <div class="progress" style="height: 4px;">
                                    <div class="progress-bar bg-success" style="data-width:<%= (voucher.quantityClaimed / voucher.quantityTotal) * 100 %>%"></div>
                                </div>
                            </div>
                            <div class="mb-2">
                                <small class="text-muted">
                                    <i class="fas fa-calendar me-1"></i>
                                    HSD: <%= new Date(voucher.endDate).toLocaleDateString('vi-VN') %>
                                </small>
                            </div>
                            <% if (user) { %>
                                <form action="/vouchers/<%= voucher._id %>/claim" method="POST" data-voucher-id="<%= voucher._id %>">
                                    <button type="submit" class="btn btn-success btn-sm w-100" data-claim-btn-for="<%= voucher._id %>">
                                        <i class="fas fa-gift me-1"></i>Claim voucher
                                    </button>
                                </form>
                            <% } else { %>
                                <a href="/auth" class="btn btn-outline-success btn-sm w-100">
                                    <i class="fas fa-sign-in-alt me-1"></i>Đăng nhập để claim
                                </a>
                            <% } %>
                        </div>
                    <% }) %>
                <% } else { %>
                    <div class="text-center py-3">
                        <i class="fas fa-percent fa-2x text-muted mb-2"></i>
                        <p class="text-muted small">Chưa có voucher nào</p>
                    </div>
                <% } %>
            </div>
        </div>
        <div class="d-grid gap-2">
            <a href="/locations" class="btn btn-outline-primary">
                <i class="fas fa-arrow-left me-1"></i>Quay lại danh sách
            </a>
            <a href="/vouchers" class="btn btn-outline-success">
                <i class="fas fa-percent me-1"></i>Xem tất cả voucher
            </a>
        </div>
    </div>
</div>

<% if (user && user.role === "user") { %>
    <div class="modal fade" id="reviewModal" tabindex="-1">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">
                        <i class="fas fa-star me-2"></i>Viết đánh giá
                    </h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                </div>
                <form action="/locations/<%= location._id %>/reviews" method="POST" enctype="multipart/form-data">
                    <div class="modal-body">
                        <div class="mb-3">
                            <label class="form-label">Đánh giá:</label>
                            <div class="rating-input">
                                <input type="hidden" name="rating" id="ratingValue" value="5" required>
                                <div class="stars">
                                    <% for (let i = 1; i <= 5; i++) { %>
                                        <i class="fas fa-star star-rating" data-rating="<%= i %>"></i>
                                    <% } %>
                                </div>
                            </div>
                        </div>
                        <div class="mb-3">
                            <label for="comment" class="form-label">Nhận xét <span class="text-danger">*</span></label>
                            <textarea class="form-control" id="comment" name="comment" rows="3" placeholder="Chia sẻ trải nghiệm của bạn..." required></textarea>
                        </div>
                        <div class="mb-3">
                            <label for="mediaFiles" class="form-label">Hình ảnh / Video <span class="text-danger">*</span></label>
                            <input type="file" class="form-control" id="mediaFiles" name="mediaFiles" accept="image/*,video/*" multiple required>
                            <small class="text-muted">Bắt buộc phải chọn ít nhất 1 tệp, tối đa 5 tệp, dung lượng mỗi tệp không vượt quá 15MB.</small>
                        </div>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Hủy</button>
                        <button type="submit" class="btn btn-primary">
                            <i class="fas fa-paper-plane me-1"></i>Gửi đánh giá
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
<% } %>

<div class="modal fade" id="ownerProfileModal" tabindex="-1">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">
                    <i class="fas fa-id-card me-2"></i>Hồ sơ chủ sở hữu
                </h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <% if (location.owner) { %>
                    <p class="mb-2"><strong>Tên chủ sở hữu:</strong> <%= location.owner.username %></p>
                    <% if (location.owner.email) { %>
                        <p class="mb-2"><strong>Email:</strong> <%= location.owner.email %></p>
                    <% } %>
                <% } else { %>
                    <p class="text-muted mb-0">Không tìm thấy thông tin chủ sở hữu.</p>
                <% } %>
            </div>
        </div>
    </div>
</div>

<script>
(async function() {
    const locationId = '<%= location._id %>';
    try {
        const response = await fetch(`/locations/${locationId}/reviews/remaining`, { credentials: 'same-origin' });
        if (!response.ok) return;
        const data = await response.json();
        if (data.success) {
            const { remaining, currentCount, maxAllowed, canReview } = data;
            if (canReview) {
                if (remaining == 0) {
                    alert(`Chào mừng bạn đến với địa điểm này, mình muốn thông báo một chút rằng là bạn có 3 lượt đánh giá cho địa điểm này và mỗi khi đánh giá bạn phải nhập đủ tất cả các ô nhé.`);
                } else {
                    alert(`Cảm ơn bạn đã quay lại địa điểm này. Mình chỉ muốn nhắc rằng bạn còn ${remaining} lần đánh giá cho địa điểm này.\n(Đã đánh giá: ${currentCount}/${maxAllowed})`);
                }
            } else {
                alert(`Cảm ơn bạn đã quay lại địa điểm này. Mình muốn thông báo rằng nạn đã đánh giá địa điểm này ${maxAllowed} lần rồi.\nMỗi tài khoản chỉ có thể đánh giá tối đa ${maxAllowed} lần cho mỗi địa điểm.`);
            }
        }
    } catch (error) {
        console.error('Error loading review remaining count:', error);
    }
})();

document.addEventListener('DOMContentLoaded', function() {
    const stars = document.querySelectorAll('.star-rating');
    const ratingInput = document.getElementById('ratingValue');
    const updateStars = (rating) => {
        stars.forEach((s, i) => {
            if (i < rating) {
                s.classList.add('text-warning');
                s.classList.remove('text-muted');
            } else {
                s.classList.add('text-muted');
                s.classList.remove('text-warning');
            }
        });
    };
    stars.forEach(star => {
        star.addEventListener('click', function() {
            const rating = parseInt(this.dataset.rating);
            ratingInput.value = rating;
            updateStars(rating);
        });
        star.addEventListener('mouseenter', function() {
            updateStars(parseInt(this.dataset.rating));
        });
    });
    document.querySelector('.rating-input').addEventListener('mouseleave', function() {
        updateStars(parseInt(ratingInput.value));
    });
});
</script>

<style>
.star-rating {
    cursor: pointer;
    font-size: 1.5rem;
    margin-right: 0.25rem;
    transition: color 0.2s;
}
.star-rating:hover {
    transform: scale(1.1);
}
.rating-input .stars {
    display: flex;
    gap: 0.25rem;
}
.review-media-grid {
    display: flex;
    flex-wrap: wrap;
    gap: 0.75rem;
}
.review-media-thumb {
    display: inline-block;
    width: 110px;
    height: 80px;
    border-radius: 8px;
    overflow: hidden;
    box-shadow: 0 2px 6px rgba(0, 0, 0, 0.15);
}
.review-media-thumb img {
    width: 100%;
    height: 100%;
    object-fit: cover;
}
.review-media-grid video {
    width: 160px;
    max-height: 120px;
    border-radius: 8px;
    box-shadow: 0 2px 6px rgba(0, 0, 0, 0.15);
}
.location-hero-card {
    border: none;
    box-shadow: 0 12px 30px rgba(0, 0, 0, 0.08);
}
.owner-chip {
    position: absolute;
    right: 1rem;
    bottom: 1rem;
    background: rgba(255, 255, 255, 0.92);
    border-radius: 0.75rem;
    padding: 0.4rem 0.9rem;
    text-align: right;
    backdrop-filter: blur(6px);
}
</style>

<% if (googleMapsApiKey) { %>
<script>
// Google Maps Integration
function initMap() {
    const locationAddress = '<%= location.address %>, <%= location.city || "Việt Nam" %>';
    const locationName = '<%= location.name.replace(/'/g, "\\'") %>';
    
    // Tạo map với tọa độ mặc định (Sài Gòn)
    const map = new google.maps.Map(document.getElementById('map'), {
        zoom: 15,
        center: { lat: 10.8231, lng: 106.6297 },
        mapTypeControl: true,
        streetViewControl: true,
        fullscreenControl: true
    });

    // Geocode địa chỉ
    const geocoder = new google.maps.Geocoder();
    geocoder.geocode({ address: locationAddress }, (results, status) => {
        if (status === 'OK') {
            const location = results[0].geometry.location;
            map.setCenter(location);

            // Tạo marker
            const marker = new google.maps.Marker({
                map: map,
                position: location,
                title: locationName,
                animation: google.maps.Animation.DROP
            });

            // Tạo InfoWindow
            const infoWindow = new google.maps.InfoWindow({
                content: `
                    <div style="padding: 10px; max-width: 250px;">
                        <h6 style="margin: 0 0 8px 0; font-weight: bold; color: #2563eb;">
                            <i class="fas fa-map-marker-alt" style="color: #ef4444;"></i>
                            ${locationName}
                        </h6>
                        <p style="margin: 0; font-size: 13px; color: #666;">
                            <i class="fas fa-location-arrow" style="color: #10b981;"></i>
                            <%= location.address %>
                        </p>
                        <% if (location.city) { %>
                        <p style="margin: 5px 0 0 0; font-size: 12px; color: #888;">
                            <i class="fas fa-city"></i> <%= location.city %>
                        </p>
                        <% } %>
                        <a href="https://www.google.com/maps/dir/?api=1&destination=${encodeURIComponent(locationAddress)}" 
                           target="_blank" 
                           style="display: inline-block; margin-top: 8px; color: #2563eb; text-decoration: none; font-size: 12px;">
                            <i class="fas fa-directions"></i> Chỉ đường →
                        </a>
                    </div>
                `
            });

            // Click marker để mở InfoWindow
            marker.addListener('click', () => {
                infoWindow.open(map, marker);
            });

            // Tự động mở InfoWindow
            setTimeout(() => {
                infoWindow.open(map, marker);
            }, 500);

            // Tính khoảng cách từ vị trí hiện tại
            if (navigator.geolocation) {
                navigator.geolocation.getCurrentPosition((position) => {
                    const origin = new google.maps.LatLng(
                        position.coords.latitude,
                        position.coords.longitude
                    );

                    const service = new google.maps.DistanceMatrixService();
                    service.getDistanceMatrix({
                        origins: [origin],
                        destinations: [location],
                        travelMode: 'DRIVING'
                    }, (response, status) => {
                        if (status === 'OK' && response.rows[0].elements[0].status === 'OK') {
                            const distance = response.rows[0].elements[0].distance.text;
                            const duration = response.rows[0].elements[0].duration.text;
                            
                            document.getElementById('distance-info').innerHTML = `
                                <div class="alert alert-info">
                                    <i class="fas fa-route"></i> 
                                    <strong>Khoảng cách:</strong> ${distance} 
                                    <span class="text-muted">(${duration} bằng xe)</span>
                                </div>
                            `;
                        }
                    });
                });
            }
        } else {
            console.error('Geocode không thành công:', status);
        }
    });
}
</script>

<!-- Load Google Maps API -->
<script async defer 
    src="https://maps.googleapis.com/maps/api/js?key=<%= googleMapsApiKey %>&callback=initMap">
</script>
<% } %>
