<%= name %>
<%   } else { %>
<%= name.length <= 2 ? name[0] + '*' : name.slice(0, Math.min(3, name.length)) + '***' %>
<%   } %>
<% } %>

<div class="modal fade" id="ownerProfileModal" tabindex="-1">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">
                    <i class="fas fa-id-card me-2"></i>Hồ sơ chủ sở hữu
                </h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <% if (location.owner) { %>
                    <p class="mb-2"><strong>Tên chủ sở hữu:</strong> <%= location.owner.username %></p>
                    <% if (location.owner.email) { %>
                        <p class="mb-2"><strong>Email:</strong> <%= location.owner.email %></p>
                    <% } %>
                <% } else { %>
                    <p class="text-muted mb-0">Không tìm thấy thông tin chủ sở hữu.</p>
                <% } %>
            </div>
        </div>
    </div>
</div>

<script>
// Rating stars interaction
document.addEventListener('DOMContentLoaded', function() {
    const stars = document.querySelectorAll('.star-rating');
    const ratingInput = document.getElementById('ratingValue');
    
    stars.forEach((star, index) => {
        star.addEventListener('click', function() {
            const rating = parseInt(this.dataset.rating);
            ratingInput.value = rating;
            
            stars.forEach((s, i) => {
                if (i < rating) {
                    s.classList.add('text-warning');
                    s.classList.remove('text-muted');
                } else {
                    s.classList.add('text-muted');
                    s.classList.remove('text-warning');
                }
            });
        });
        
        star.addEventListener('mouseenter', function() {
            const rating = parseInt(this.dataset.rating);
            stars.forEach((s, i) => {
                if (i < rating) {
                    s.classList.add('text-warning');
                    s.classList.remove('text-muted');
                } else {
                    s.classList.add('text-muted');
                    s.classList.remove('text-warning');
                }
            });
        });
    });
    
    document.querySelector('.rating-input').addEventListener('mouseleave', function() {
        const rating = parseInt(ratingInput.value);
        stars.forEach((s, i) => {
            if (i < rating) {
                s.classList.add('text-warning');
                s.classList.remove('text-muted');
            } else {
                s.classList.add('text-muted');
                s.classList.remove('text-warning');
            }
        });
    });
});
</script>

<style>
.star-rating {
    cursor: pointer;
    font-size: 1.5rem;
    margin-right: 0.25rem;
    transition: color 0.2s;
}

.star-rating:hover {
    transform: scale(1.1);
}

.rating-input .stars {
    display: flex;
    gap: 0.25rem;
}

.review-media-grid {
    display: flex;
    flex-wrap: wrap;
    gap: 0.75rem;
}

.review-media-thumb {
    display: inline-block;
    width: 110px;
    height: 80px;
    border-radius: 8px;
    overflow: hidden;
    box-shadow: 0 2px 6px rgba(0, 0, 0, 0.15);
}

.review-media-thumb img {
    width: 100%;
    height: 100%;
    object-fit: cover;
}

.review-media-grid video {
    width: 160px;
    max-height: 120px;
    border-radius: 8px;
    box-shadow: 0 2px 6px rgba(0, 0, 0, 0.15);
}

.location-hero-card {
    border: none;
    box-shadow: 0 12px 30px rgba(0, 0, 0, 0.08);
}

.owner-chip {
    position: absolute;
    right: 1rem;
    bottom: 1rem;
    background: rgba(255, 255, 255, 0.92);
    border-radius: 0.75rem;
    padding: 0.4rem 0.9rem;
    text-align: right;
    backdrop-filter: blur(6px);
}
</style>
