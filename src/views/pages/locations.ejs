<div class="filter-wrapper d-flex justify-content-between align-items-center mb-3">
    <h1 class="h2 mb-0">
        <i class="fas fa-map-marker-alt text-primary me-2"></i>
        Danh sách Địa điểm
    </h1>

    <button id="filterToggle" class="btn btn-outline-danger d-inline-flex align-items-center gap-2">
        <i class="fas fa-filter"></i> <span>Hiển thị</span>
    </button>
</div>

<div id="filterGroup" class="filter-group collapse-filter d-flex gap-2 mb-4 flex-wrap" style="justify-content: flex-end;">
    <div class="btn-group" role="group">
        <a href="/locations?type=all" class="btn <%= currentType === 'all' ? 'btn-primary' : 'btn-outline-primary' %>">Tất cả</a>
        <a href="/locations?type=restaurant" class="btn <%= currentType === 'restaurant' ? 'btn-primary' : 'btn-outline-primary' %>">Nhà hàng</a>
        <a href="/locations?type=cafe" class="btn <%= currentType === 'cafe' ? 'btn-primary' : 'btn-outline-primary' %>">Cafe</a>
        <a href="/locations?type=tourist_spot" class="btn <%= currentType === 'tourist_spot' ? 'btn-primary' : 'btn-outline-primary' %>">Du lịch</a>
    </div>
</div>

<script>
document.getElementById("filterToggle").addEventListener("click", function () {
    const filterGroup = document.getElementById("filterGroup");
    const textSpan = this.querySelector("span");
    
    filterGroup.classList.toggle("show");

    if (filterGroup.classList.contains("show")) {
        textSpan.textContent = "Ẩn bộ lọc";
    } else {
        textSpan.textContent = "Hiển thị";
    }
});
</script>

<style>
    .collapse-filter {
    max-height: 0;
    overflow: hidden;
    opacity: 0;
    transition: max-height 0.4s ease, opacity 0.4s ease;
}

.collapse-filter.show {
    max-height: 100px;
    opacity: 1;
}

.filter-group .btn-group .btn {
    white-space: nowrap;
}

@media (max-width: 576px) {
    .filter-group .btn-group {
        flex-wrap: wrap;
    }
}
</style>

<% if (locations && locations.length > 0) { %>
    <div class="row">
        <% locations.forEach(location => { %>
            <div class="col-md-6 col-lg-4 mb-4">
                <div class="card h-100 shadow-sm">
                    <img src="<%= location.imageUrl %>" class="card-img-top" alt="<%= location.name %>" style="height: 200px; object-fit: cover;">
                    <div class="card-body d-flex flex-column">
                        <h5 class="card-title"><%= location.name %></h5>
                        <p class="card-text text-muted flex-grow-1"><%= location.description.substring(0, 100) %>...</p>
                        <div class="d-flex justify-content-between align-items-center mb-3">
                            <span class="badge bg-secondary"><%= location.type %></span>
                            <div class="rating">
                                <% for (let i = 1; i <= 5; i++) { %>
                                    <i class="fas fa-star <%= i <= location.rating ? 'text-warning' : 'text-muted' %>"></i>
                                <% } %>
                                <span class="ms-1 text-muted">(<%= location.rating %>)</span>
                            </div>
                        </div>
                        <div class="mb-3">
                            <small class="text-muted">
                                <i class="fas fa-map-marker-alt me-1"></i>
                                <%= location.address.substring(0, 50) %>...
                            </small>
                        </div>
                        <div class="d-grid gap-2">
                            <a href="/locations/<%= location._id %>" class="btn btn-primary" data-action="quick-view" data-location-id="<%= location._id %>">
                                <i class="fas fa-eye me-1"></i>Xem địa điểm
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        <% }) %>
    </div>
<% } else { %>
    <div class="text-center py-5">
        <i class="fas fa-map-marker-alt fa-3x text-muted mb-3"></i>
        <h4 class="text-muted">Chưa có địa điểm nào</h4>
        <p class="text-muted">Hãy quay lại sau để xem các địa điểm mới!</p>
        <a href="/" class="btn btn-primary">
            <i class="fas fa-home me-1"></i>Về trang chủ
        </a>
    </div>
<% } %>
