<!--
  File: views/admin/dashboard.ejs
  
  Mô tả: Trang dashboard dành cho admin
  - Hiển thị thống kê tổng quan: users, locations, vouchers, reviews
  - Hiển thị biểu đồ tăng trưởng users và locations (6 tháng gần nhất)
  - Hiển thị thống kê voucher (active, expired)
  - Hiển thị danh sách users, locations, vouchers mới nhất
  
  Công nghệ sử dụng:
  - EJS: Template engine để render HTML
  - Bootstrap 5: Framework CSS cho UI
  - Chart.js: Thư viện vẽ biểu đồ (line chart, bar chart)
  - Font Awesome: Icons
-->

<div class="d-flex justify-content-between align-items-center mb-4">
    <h1 class="h2">
        <i class="fas fa-tachometer-alt text-primary me-2"></i>
        Admin Dashboard
    </h1>
    <div class="text-muted">
        <i class="fas fa-calendar me-1"></i>
        <%= new Date().toLocaleDateString('vi-VN') %>
    </div>
</div>

<div class="row mb-5">
    <div class="col-md-3 mb-3">
        <div class="card bg-primary text-white">
            <div class="card-body d-flex justify-content-between">
                <div>
                    <h4 class="mb-0"><%= stats.totalUsers %></h4>
                    <p class="mb-0">Tổng Users</p>
                </div>
                <i class="fas fa-users fa-2x align-self-center"></i>
            </div>
        </div>
    </div>
    <div class="col-md-3 mb-3">
        <div class="card bg-success text-white">
            <div class="card-body d-flex justify-content-between">
                <div>
                    <h4 class="mb-0"><%= stats.totalLocations %></h4>
                    <p class="mb-0">Địa điểm</p>
                </div>
                <i class="fas fa-map-marker-alt fa-2x align-self-center"></i>
            </div>
        </div>
    </div>
    <div class="col-md-3 mb-3">
        <div class="card bg-warning text-white">
            <div class="card-body d-flex justify-content-between">
                <div>
                    <h4 class="mb-0"><%= stats.totalVouchers %></h4>
                    <p class="mb-0">Tổng Voucher</p>
                </div>
                <i class="fas fa-percent fa-2x align-self-center"></i>
            </div>
        </div>
    </div>
    <div class="col-md-3 mb-3">
        <div class="card bg-info text-white">
            <div class="card-body d-flex justify-content-between">
                <div>
                    <h4 class="mb-0"><%= stats.totalReviews %></h4>
                    <p class="mb-0">Đánh giá</p>
                </div>
                <i class="fas fa-star fa-2x align-self-center"></i>
            </div>
        </div>
    </div>
</div>

<div class="row mb-5">
    <div class="col-md-6">
        <div class="card">
            <div class="card-header">
                <h5 class="mb-0"><i class="fas fa-chart-pie me-2"></i>Thống kê Voucher</h5>
            </div>
            <div class="card-body text-center">
                <div class="row">
                    <div class="col-6 border-end">
                        <h3 class="text-success"><%= stats.activeVouchers %></h3>
                        <p class="text-muted mb-0">Đang hoạt động</p>
                    </div>
                    <div class="col-6">
                        <h3 class="text-danger"><%= stats.expiredVouchers %></h3>
                        <p class="text-muted mb-0">Đã hết hạn</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="col-md-6">
        <div class="card">
            <div class="card-header">
                <h5 class="mb-0"><i class="fas fa-cogs me-2"></i>Quản lý nhanh</h5>
            </div>
            <div class="card-body d-grid gap-2">
                <a href="/admin/users" class="btn btn-outline-primary"><i class="fas fa-users me-1"></i>Users</a>
                <a href="/admin/locations" class="btn btn-outline-success"><i class="fas fa-map-marker-alt me-1"></i>Địa điểm</a>
                <a href="/admin/vouchers" class="btn btn-outline-warning"><i class="fas fa-percent me-1"></i>Voucher</a>
                <a href="/admin/reviews" class="btn btn-outline-info"><i class="fas fa-star me-1"></i>Reviews</a>
            </div>
        </div>
    </div>
</div>

<div class="row mb-5">
    <div class="col-md-6">
        <div class="card">
            <div class="card-header"><h5 class="mb-0"><i class="fas fa-user-chart me-2"></i>Tăng trưởng người dùng</h5></div>
            <div class="card-body"><canvas id="userGrowthChart" height="140"></canvas></div>
        </div>
    </div>
    <div class="col-md-6">
        <div class="card">
            <div class="card-header"><h5 class="mb-0"><i class="fas fa-map me-2"></i>Tăng trưởng địa điểm</h5></div>
            <div class="card-body"><canvas id="locationGrowthChart" height="140"></canvas></div>
        </div>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/chart.js@4.4.1/dist/chart.umd.min.js"></script>
    <script>
    document.addEventListener('DOMContentLoaded', function () {
        try {
            const labels = <%- JSON.stringify(growthData?.labels || []) %>;
            const userData = <%- JSON.stringify(growthData?.users || []) %>;
            const locationData = <%- JSON.stringify(growthData?.locations || []) %>;
            const options = {
                responsive: true,
                scales: { y: { beginAtZero: true, ticks: { precision: 0 } } },
                plugins: { legend: { display: false } }
            };
            new Chart(document.getElementById('userGrowthChart'), {
                type: 'line',
                data: { labels, datasets: [{ data: userData, borderColor: '#0d6efd', backgroundColor: 'rgba(13,110,253,0.15)', tension: 0.25, fill: true }] },
                options
            });
            new Chart(document.getElementById('locationGrowthChart'), {
                type: 'bar',
                data: { labels, datasets: [{ data: locationData, backgroundColor: '#20c997' }] },
                options
            });
        } catch (e) {
            console.error('Chart render error', e);
        }
    });
    </script>
</div>

<div class="row">
    <div class="col-md-4">
        <div class="card">
            <div class="card-header"><h5 class="mb-0"><i class="fas fa-user-plus me-2"></i>Users mới</h5></div>
            <div class="card-body">
                <% if (recentUsers?.length) { %>
                    <% recentUsers.forEach(user => { %>
                        <div class="d-flex justify-content-between align-items-center mb-2">
                            <div>
                                <h6 class="mb-0"><%= user.username %></h6>
                                <small class="text-muted"><%= user.email %></small>
                            </div>
                            <span class="badge bg-secondary"><%= user.role %></span>
                        </div>
                    <% }) %>
                <% } else { %>
                    <p class="text-muted text-center">Chưa có user nào</p>
                <% } %>
            </div>
        </div>
    </div>
    <div class="col-md-4">
        <div class="card">
            <div class="card-header"><h5 class="mb-0"><i class="fas fa-map-marker-alt me-2"></i>Địa điểm mới</h5></div>
            <div class="card-body">
                <% if (recentLocations?.length) { %>
                    <% recentLocations.forEach(location => { %>
                        <div class="d-flex justify-content-between align-items-center mb-2">
                            <div>
                                <h6 class="mb-0"><%= location.name %></h6>
                                <small class="text-muted">by <%= location.owner.username %></small>
                            </div>
                            <span class="badge bg-secondary"><%= location.type %></span>
                        </div>
                    <% }) %>
                <% } else { %>
                    <p class="text-muted text-center">Chưa có địa điểm nào</p>
                <% } %>
            </div>
        </div>
    </div>
    <div class="col-md-4">
        <div class="card">
            <div class="card-header"><h5 class="mb-0"><i class="fas fa-percent me-2"></i>Voucher mới</h5></div>
            <div class="card-body">
                <% if (recentVouchers?.length) { %>
                    <% recentVouchers.forEach(voucher => { %>
                        <div class="d-flex justify-content-between align-items-center mb-2">
                            <div>
                                <h6 class="mb-0"><%= voucher.code %></h6>
                                <small class="text-muted"><%= voucher.location.name %></small>
                            </div>
                            <span class="badge bg-success">-<%= voucher.discountPct %>%</span>
                        </div>
                    <% }) %>
                <% } else { %>
                    <p class="text-muted text-center">Chưa có voucher nào</p>
                <% } %>
            </div>
        </div>
    </div>
</div>
