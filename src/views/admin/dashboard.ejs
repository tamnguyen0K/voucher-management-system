
<div class="d-flex justify-content-between align-items-center mb-4">
    <h1 class="h2">
        <i class="fas fa-tachometer-alt text-primary me-2"></i>
        Admin Dashboard
    </h1>
    <div class="text-muted">
        <i class="fas fa-calendar me-1"></i>
        <%= new Date().toLocaleDateString('vi-VN') %>
    </div>
</div>

<!-- Statistics Cards -->
<div class="row mb-5">
    <div class="col-md-3 mb-3">
        <div class="card bg-primary text-white">
            <div class="card-body">
                <div class="d-flex justify-content-between">
                    <div>
                        <h4 class="mb-0"><%= stats.totalUsers %></h4>
                        <p class="mb-0">Tổng Users</p>
                    </div>
                    <div class="align-self-center">
                        <i class="fas fa-users fa-2x"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="col-md-3 mb-3">
        <div class="card bg-success text-white">
            <div class="card-body">
                <div class="d-flex justify-content-between">
                    <div>
                        <h4 class="mb-0"><%= stats.totalLocations %></h4>
                        <p class="mb-0">Địa điểm</p>
                    </div>
                    <div class="align-self-center">
                        <i class="fas fa-map-marker-alt fa-2x"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="col-md-3 mb-3">
        <div class="card bg-warning text-white">
            <div class="card-body">
                <div class="d-flex justify-content-between">
                    <div>
                        <h4 class="mb-0"><%= stats.totalVouchers %></h4>
                        <p class="mb-0">Tổng Voucher</p>
                    </div>
                    <div class="align-self-center">
                        <i class="fas fa-percent fa-2x"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="col-md-3 mb-3">
        <div class="card bg-info text-white">
            <div class="card-body">
                <div class="d-flex justify-content-between">
                    <div>
                        <h4 class="mb-0"><%= stats.totalReviews %></h4>
                        <p class="mb-0">Đánh giá</p>
                    </div>
                    <div class="align-self-center">
                        <i class="fas fa-star fa-2x"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Voucher Statistics -->
<div class="row mb-5">
    <div class="col-md-6">
        <div class="card">
            <div class="card-header">
                <h5 class="mb-0">
                    <i class="fas fa-chart-pie me-2"></i>
                    Thống kê Voucher
                </h5>
            </div>
            <div class="card-body">
                <div class="row text-center">
                    <div class="col-6">
                        <div class="border-end">
                            <h3 class="text-success"><%= stats.activeVouchers %></h3>
                            <p class="text-muted mb-0">Đang hoạt động</p>
                        </div>
                    </div>
                    <div class="col-6">
                        <h3 class="text-danger"><%= stats.expiredVouchers %></h3>
                        <p class="text-muted mb-0">Đã hết hạn</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="col-md-6">
        <div class="card">
            <div class="card-header">
                <h5 class="mb-0">
                    <i class="fas fa-cogs me-2"></i>
                    Quản lý nhanh
                </h5>
            </div>
            <div class="card-body">
                <div class="d-grid gap-2">
                    <a href="/admin/users" class="btn btn-outline-primary">
                        <i class="fas fa-users me-1"></i>Quản lý Users
                    </a>
                    <a href="/admin/locations" class="btn btn-outline-success">
                        <i class="fas fa-map-marker-alt me-1"></i>Quản lý Địa điểm
                    </a>
                    <a href="/admin/vouchers" class="btn btn-outline-warning">
                        <i class="fas fa-percent me-1"></i>Quản lý Voucher
                    </a>
                    <a href="/admin/reviews" class="btn btn-outline-info">
                        <i class="fas fa-star me-1"></i>Quản lý Reviews
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Recent Activities -->
<div class="row">
    <div class="col-md-4">
        <div class="card">
            <div class="card-header">
                <h5 class="mb-0">
                    <i class="fas fa-user-plus me-2"></i>
                    Users mới
                </h5>
            </div>
            <div class="card-body">
                <% if (recentUsers && recentUsers.length > 0) { %>
                    <% recentUsers.forEach(user => { %>
                        <div class="d-flex justify-content-between align-items-center mb-2">
                            <div>
                                <h6 class="mb-0"><%= user.username %></h6>
                                <small class="text-muted"><%= user.email %></small>
                            </div>
                            <span class="badge bg-secondary"><%= user.role %></span>
                        </div>
                    <% }) %>
                <% } else { %>
                    <p class="text-muted text-center">Chưa có user nào</p>
                <% } %>
            </div>
        </div>
    </div>
    
    <div class="col-md-4">
        <div class="card">
            <div class="card-header">
                <h5 class="mb-0">
                    <i class="fas fa-map-marker-alt me-2"></i>
                    Địa điểm mới
                </h5>
            </div>
            <div class="card-body">
                <% if (recentLocations && recentLocations.length > 0) { %>
                    <% recentLocations.forEach(location => { %>
                        <div class="d-flex justify-content-between align-items-center mb-2">
                            <div>
                                <h6 class="mb-0"><%= location.name %></h6>
                                <small class="text-muted">by <%= location.owner.username %></small>
                            </div>
                            <span class="badge bg-secondary"><%= location.type %></span>
                        </div>
                    <% }) %>
                <% } else { %>
                    <p class="text-muted text-center">Chưa có địa điểm nào</p>
                <% } %>
            </div>
        </div>
    </div>
    
    <div class="col-md-4">
        <div class="card">
            <div class="card-header">
                <h5 class="mb-0">
                    <i class="fas fa-percent me-2"></i>
                    Voucher mới
                </h5>
            </div>
            <div class="card-body">
                <% if (recentVouchers && recentVouchers.length > 0) { %>
                    <% recentVouchers.forEach(voucher => { %>
                        <div class="d-flex justify-content-between align-items-center mb-2">
                            <div>
                                <h6 class="mb-0"><%= voucher.code %></h6>
                                <small class="text-muted"><%= voucher.location.name %></small>
                            </div>
                            <span class="badge bg-success">-<%= voucher.discountPct %>%</span>
                        </div>
                    <% }) %>
                <% } else { %>
                    <p class="text-muted text-center">Chưa có voucher nào</p>
                <% } %>
            </div>
        </div>
    </div>
</div>
