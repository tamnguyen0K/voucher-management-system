<!--
  File: views/admin/manage_location.ejs
  
  Mô tả: Trang quản lý địa điểm dành cho admin
  - Hiển thị danh sách tất cả locations với thông tin: name, owner, type, rating, address
  - Xem chi tiết location
  - Xóa location (có confirmation)
  
  Công nghệ sử dụng:
  - EJS: Template engine để render HTML
  - Bootstrap 5: Framework CSS cho UI
  - Font Awesome: Icons
-->

<div class="d-flex justify-content-between align-items-center mb-4">
    <h1 class="h2">
        <i class="fas fa-map-marker-alt text-primary me-2"></i>
        Quản lý Địa điểm
    </h1>
    <a href="/admin/dashboard" class="btn btn-outline-secondary">
        <i class="fas fa-arrow-left me-1"></i>Quay lại Dashboard
    </a>
</div>

<div class="card">
    <div class="card-header">
        <h5 class="mb-0">
            <i class="fas fa-list me-2"></i>
            Danh sách Địa điểm (<%= locations ? locations.length : 0 %>)
        </h5>
    </div>
    <div class="card-body">
        <% if (locations && locations.length > 0) { %>
            <div class="table-responsive">
                <table class="table table-hover">
                    <thead>
                        <tr>
                            <th>Hình ảnh</th>
                            <th>Tên địa điểm</th>
                            <th>Chủ sở hữu</th>
                            <th>Loại</th>
                            <th>Đánh giá</th>
                            <th>Địa chỉ</th>
                            <th>Ngày tạo</th>
                            <th>Thao tác</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% locations.forEach(location => { %>
                            <tr>
                                <td>
                                    <img src="<%= location.imageUrl || '/images/default-location.jpg' %>" 
                                         class="rounded" 
                                         style="width: 60px; height: 40px; object-fit: cover;"
                                         onerror="this.src='/images/default-location.jpg'">
                                </td>
                                <td>
                                    <h6 class="mb-0"><%= location.name %></h6>
                                    <small class="text-muted"><%= location.description ? location.description.substring(0, 50) + '...' : '' %></small>
                                </td>
                                <td>
                                    <% if (location.owner) { %>
                                        <div>
                                            <strong><%= location.owner.username %></strong>
                                            <br>
                                            <small class="text-muted"><%= location.owner.email %></small>
                                        </div>
                                    <% } else { %>
                                        <span class="text-muted">N/A</span>
                                    <% } %>
                                </td>
                                <td><span class="badge bg-secondary"><%= location.type %></span></td>
                                <td>
                                    <div class="rating">
                                        <% for (let i = 1; i <= 5; i++) { %>
                                            <i class="fas fa-star <%= i <= (location.rating || 0) ? 'text-warning' : 'text-muted' %>"></i>
                                        <% } %>
                                        <span class="ms-1">(<%= location.rating || 0 %>)</span>
                                    </div>
                                </td>
                                <td>
                                    <small class="text-muted"><%= location.address ? location.address.substring(0, 30) + '...' : 'N/A' %></small>
                                </td>
                                <td>
                                    <small class="text-muted"><%= new Date(location.createdAt).toLocaleDateString('vi-VN') %></small>
                                </td>
                                <td>
                                    <div class="btn-group btn-group-sm">
                                        <a href="/locations/<%= location._id %>" class="btn btn-outline-primary" title="Xem chi tiết">
                                            <i class="fas fa-eye"></i>
                                        </a>
                                        <form action="/admin/locations/<%= location._id %>" method="POST" class="d-inline" 
                                              data-confirm="Bạn có chắc muốn xóa địa điểm này? Tất cả voucher và review liên quan cũng sẽ bị xóa!">
                                            <input type="hidden" name="_method" value="DELETE">
                                            <button type="submit" class="btn btn-outline-danger" title="Xóa">
                                                <i class="fas fa-trash"></i>
                                            </button>
                                        </form>
                                    </div>
                                </td>
                            </tr>
                        <% }) %>
                    </tbody>
                </table>
            </div>
        <% } else { %>
            <div class="text-center py-5">
                <i class="fas fa-map-marker-alt fa-3x text-muted mb-3"></i>
                <h4 class="text-muted">Chưa có địa điểm nào</h4>
            </div>
        <% } %>
    </div>
</div>
